<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="nl.mprog.projects.npuzzle10352783.GameSetupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Setup"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:textSize="32dp"/>


    <ImageButton
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/android_icon"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton2"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:src="@drawable/android_vector"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton3"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitCenter"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Image"
        android:id="@+id/custom_button"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="100dp"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/customImageView"
        android:layout_gravity="center"
        android:scaleType="fitCenter"/>


    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textOn="Easy"
        android:textOff="Easy"
        android:id="@+id/easy_togglebutton"
        android:layout_gravity="left|top"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="5dp"/>

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textOn="Medium"
        android:textOff="Medium"
        android:id="@+id/medium_togglebutton"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="75dp"/>

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textOn="Hard"
        android:textOff="Hard"
        android:id="@+id/hard_togglebutton"
        android:layout_gravity="right|top"
        android:layout_marginTop="75dp"
        android:layout_marginRight="5dp"/>


</FrameLayout>
